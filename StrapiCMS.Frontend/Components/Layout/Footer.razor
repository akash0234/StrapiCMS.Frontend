                                    <span><i class="bi bi-envelope-fill"></i></span>
                                    <p>
                                        @FooterModel?.contacts?.email
                                    </p>
                                </a>
                            </li>
                            <li>
                                <a href="tel:61 0418 700 193" class="d-flex  align-items-start text-black">
                                    <span><i class="bi bi-telephone-fill"></i></span>
                                    <p>
                                        @FooterModel?.contacts?.phone
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-12 footer-link mb-4">
                    <div class="footer_heading">
                        <h3>IMPORTANT LINKS</h3>
                        <ul class="links">
                            @* <li class="nav-item active">
                                <a href="/refund-or-exchange-policy">Refund / Exchange Policy</a>
                            </li>
                            <li class="nav-item active">
                                <a href="/privacy-policy">Privacy Policy</a>
