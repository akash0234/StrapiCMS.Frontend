                            </li>
                            <li class="nav-item active">
                                <a href="/blog">Blog</a>
                            </li> *@
                            @if (FooterModel?.menuLinks?.Count > 0)
                            {
                                @foreach (var menuItem in FooterModel.menuLinks)
                                {
                                    <li class="nav-item">
                                        <a href="@menuItem.url">@menuItem.text</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </footer>
}

@code {
    [Parameter]
    public FooterDataModel FooterModel { get; set; }
