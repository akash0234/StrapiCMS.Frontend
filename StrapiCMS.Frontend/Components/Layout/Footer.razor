@using StrapiCMS.Entity.FooterModel
@inject IConfiguration _configuration
@if (FooterModel != null)
{
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-12 mb-4">
                    <div class="footer_logo">
                        <a href="/"><img src="@(Common.Helper.StrapiMedia.GetStrapiImage(FooterModel?.footerLogo?.logoImg?.data?.attributes?.url,_configuration))" class="img-fluid" width="248" height="78" alt="submarinepens" title="submarinepens"></a>
                    </div>
                    <p class="text-center text-md-start mb-3">@FooterModel?.footerLogo?.logoText</p>
                    <div class="footer_social_icon mb-4">
                        @if (FooterModel?.socialLinks?.Count > 0)
                        {
                            @foreach (var socialItem in FooterModel.socialLinks)
                            {
                                <a target="@(socialItem.newTab ? "_blank":"_self")" href="@socialItem.url" class="me-2">
                                    <span>
                                        <i class="bi bi-@socialItem.social"></i>
                                    </span>
                                </a>
                            }
                        }
                        
                        @* <a target="_blank" href="https://www.facebook.com/checkpoint/1501092823525282/?next=https%3A%2F%2Fwww.facebook.com%2FSubmarineDesignerPens" class="me-2">
                    <span>
                    <i class="bi bi-facebook"></i>
                    </span>
                    </a>
                    <a target="_blank" href="https://twitter.com/home?lang=en" class="me-2">
                    <span>
                    <i class="bi bi-twitter-x"></i>
                    </span>
                    </a>
                    <a target="_blank" href="https://www.instagram.com/submarine_pens/" class="me-2">
                    <span>
